

<!-- Header -->
<header class="masthead">
  <div class="container">
    <div class="intro-text">
      <div class="intro-lead-in">Welcome To</div>
      <div class="intro-heading text-uppercase">SOBA BOOKS</div>
      <a class="btn btn-primary btn-xl text-uppercase js-scroll-trigger" href="#services">Tell Me More</a>
    </div>
  </div>
</header>

<!-- Services -->
<section id="services">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading text-uppercase">What We Offer</h2>
        </div>
    </div>
    <% services=@services.each_slice(3).to_a %>

    <% services.each do |service| %>
      <div class="row text-center">

        <% service.each do |s| %>
      <div class="col-md-4">

        <h4 class="service-heading"><%=s.title%></h4>
        <p class="text-muted"><%=s.description%></p>
      </div>
     <% end %>
    </div>
    <% end %>
  </div>
</section>

<!-- Portfolio Grid -->
<section class="bg-light" id="portfolio">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading text-uppercase">Books</h2>
        <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
      </div>
    </div>
    <div class="row">
      <% @books.each do |book| %>
      <div class="col-md-4 col-sm-6 portfolio-item">
        <%= link_to book_path(book),  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#portfolioModal1', 'class'=>'portfolio-link'}  do %>

          <div class="portfolio-hover">
            <div class="portfolio-hover-content">
              <i class="fas fa-plus fa-3x"></i>
            </div>
          </div>

          <%= image_tag(book.image.url(:thumb), :alt => "", :class => "img-fluid") %>


          <!--<img class="img-fluid" src="img/portfolio/01-thumbnail.jpg" alt="">-->
        <!--</a>-->

        <% end %>
        <div class="portfolio-caption">
          <h4><%=book.name%></h4>
          <% book.authors.each do |author| %>
          <p class="text-muted"><%=author.name%></p>
            <% end %>
        </div>
      </div>

    <% end %>

    </div>
  </div>
</section>

<!-- About -->
<section id="about">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading text-uppercase">About</h2>
        <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <ul class="timeline">
          <% @abouts.each_with_index do |about, index| %>
          <li class="<%= index % 2 == 0 ? '' : 'timeline-inverted' %>">
            <div class="timeline-image">
              <%= image_tag(about.image.url, :alt => "", :class => "rounded-circle img-fluid") %>

            </div>
            <div class="timeline-panel">
              <div class="timeline-heading">
                <h4><%=about.title%></h4>

              </div>
              <div class="timeline-body">
                <p class="text-muted"><%=about.description%></p>
              </div>
            </div>
          </li>
  <% end %>
          <li class="timeline-inverted">
            <div class="timeline-image">
              <h4>Be Part
                <br>Of Our
                <br>Story!</h4>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
</section>

<!-- Team -->
<section class="bg-light" id="team">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading text-uppercase">Our Amazing Authors</h2>
        <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
      </div>
    </div>
    <div class="row">
      <% @authors.each do |author| %>
      <div class="<%= @authors.length > 2 ? 'col-sm-4' : 'col-sm-6' %>">
        <div class="team-member">
      <%= image_tag(author.image.url, :alt => "", :class => "mx-auto rounded-circle") %>

          <h4><%=author.name%></h4>
          <p class="text-muted"><%=author.qualification%></p>
          <p class="text-muted"><%=author.occupation%></p>
          <ul class="list-inline social-buttons">
            <% if !author.twitter_url.blank? %>
            <li class="list-inline-item">
              <a href="<%= author.twitter_url %>" target="_blank">
                <i class="fab fa-twitter"></i>
              </a>
            </li>
              <%end %>
            <% if !author.fb_url.blank? %>
            <li class="list-inline-item">
              <a href="<%= author.fb_url %>" target="_blank">
                <i class="fab fa-facebook-f"></i>
              </a>
            </li>
            <%end %>
            <% if !author.linked_in_url.blank? %>
            <li class="list-inline-item">
              <a href="<%= author.linked_in_url %>" target="_blank">
                <i class="fab fa-linkedin-in"></i>
              </a>
            </li>
            <%end %>
          </ul>
        </div>
      </div>
     <% end %>
    </div>

  </div>
</section>


<!-- Contact -->
<section id="contact">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading text-uppercase">Contact Us</h2>
        <h3 class="section-subheading" style="color: white">SOBA PUBLICATIONS | Changanassery |  Phone: 9446223651 |  E-mail: <a href="mailto:info@sobabooks.com">info@sobabooks.com</a>,  <a href="mailto:soba.publications15@gmail.com">soba.publications15@gmail.com</a></h3>


      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <%= form_with(model: @contact,:html => {:id => "contactForm" ,:name=>"sentMessage",:novalidate=>"novalidate"}) do |form| %>
          <% if @contact.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

              <ul>
                <% @contact.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
