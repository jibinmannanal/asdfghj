<%= form_with(model: @author, local: true) do |f| %>
  <%= render 'shared/errors', object: @author %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>


  <div class="form-group">
    <%= f.label :occupation %>
    <%= f.text_field  :occupation, class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.label :qualification %>
    <%= f.text_field  :qualification, class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field  :description, class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.label :twitter_url %>
    <%= f.text_field  :twitter_url, class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.label :linkedIn_url %>
    <%= f.text_field  :linked_in_url, class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.label :facebook_url %>
    <%= f.text_field  :fb_url, class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.label "Active" %>
    <%= f.check_box :status%>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: 'form-control'%>
  </div>
  <%= f.submit 'Save', class: 'btn btn-primary' %>
<% end %>
</div>